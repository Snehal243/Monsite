<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    >
   <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:layout_marginLeft="@dimen/spacing_middle"
        android:layout_marginRight="@dimen/spacing_middle"
        android:layout_marginTop="@dimen/spacing_medium"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dip">
                    <TextView
                        android:id="@+id/txv_titleofrequirment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="PQR hhh"
                        android:textSize="13dp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_delete"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@android:drawable/ic_menu_close_clear_cancel"
                        android:padding="1dp"
                        android:visibility="visible"/>
                    <Button
                        android:id="@+id/btn_edit"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@android:drawable/ic_menu_edit"
                        android:padding="5dp"
                        android:visibility="gone"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txv_companyname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PQR hhh"
                        android:visibility="gone"
                        android:textSize="11dp"
                        android:textStyle="bold"
                        android:layout_weight="1"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dip"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:baselineAligned="false">
                        <TextView
                            android:id="@+id/txv_experience"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0-1yrs"
                            android:drawablePadding="20dp"
                            android:layout_weight="1"
                            android:textSize="12dp"
                            android:drawableLeft="@drawable/ic_exp_center_black_24dp"
                            tools:ignore="NestedWeights" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/txv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/location"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_place_black_24dp"
                    android:textSize="12dp"
                    android:drawablePadding="20dp"
                    tools:ignore="NestedWeights" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dip"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txv_duration"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="weekly"
                    android:drawableLeft="@drawable/ic_access_time_black_24dp"
                    android:textSize="12dp"
                    android:drawablePadding="20dp"
                    />

            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dip"
                    android:orientation="horizontal"
                    android:baselineAligned="false">
                   <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                       <TextView
                           android:id="@+id/txv_skill"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="@string/skill"
                           android:layout_weight="1"
                           android:textSize="12dp"
                           android:drawablePadding="20dp"
                           android:drawableLeft="@drawable/ic_edit_black_24dp"
                           />
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                       >
                        <!--<TextView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="@string/dateofhiring"-->
                            <!--android:textSize="12dp"-->
                            <!--android:textColor="#000000" />-->
                        <!--<TextView-->
                            <!--android:id="@+id/txv_doh"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="Not Mention"-->
                            <!--android:textSize="12dp"-->
                            <!--android:drawableLeft="@drawable/ic_date_range_black_24dp"-->
                            <!--android:drawablePadding="20dp"-->
                            <!--tools:ignore="NestedWeights" />-->
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/skillrating"
                            android:textColor="#000000"
                            />
                        <RatingBar
                            android:id="@+id/ratingbar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:max="5"
                            android:numStars="5"
                            android:progressTint="#000000"
                            android:stepSize="1" />
                    </LinearLayout>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="2dip"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/txv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status"
                        android:drawablePadding="20dp"
                        android:drawableLeft="@drawable/ic_lightbulb_outline_black_24dp"
                        android:textSize="12sp"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                       />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dip"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_gravity="right">

                    <TextView
                        android:id="@+id/txv_doh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not Mention"
                        android:textSize="12dp"
                        android:drawableLeft="@drawable/ic_date_range_black_24dp"
                        android:drawablePadding="2dp"
                        tools:ignore="NestedWeights" />
                    <TextView
                        android:id="@+id/txv_posted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22/11/17"
                        android:textColor="#323232"
                        android:textSize="10dp"
                        android:visibility="gone"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>